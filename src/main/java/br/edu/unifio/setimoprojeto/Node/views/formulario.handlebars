<h3>Novo Post</h3>
<div class="card">
    <div class="card-body">
        <form action="/add" method="POST">
            <!--action é a rota>-->
            <p>Título: </p>
            <input type="text" name="titulo" class="form-control">
            <p>Conteúdo: </p>
            <textarea name="conteudo" cols="30" rows="10"></textarea>
            <button class="btn btn-success" type="submit">Cadastrar postagem</button>
        </form>
    </div>
</div>